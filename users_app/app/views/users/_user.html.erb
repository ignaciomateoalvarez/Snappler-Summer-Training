<tr>
	<td> <%= user.id %> </td>
	<td><%= user.username%> </td>
  	<td> <%= user.followers.count %> </td>
  	<td> <%= user.followings.count %> </td>
	<td style='display:flex; gap:20px'><%= link_to 'See', user_path(user.id)%>
	<%= link_to 'Edit', edit_user_path(user.id)%>
	<%= button_to 'DELETE', user_path(user.id), method: :delete, form: { data: { turbo_confirm: "Are you sure?" }}%>
	<% if @current_user != user %>
		<% if @current_user.already_followed(user) %>
			<%= link_to 'Unfollow', delete_follow_user_path(user.id), :style=>'color: red;'%></td>
		<% else %>
			<%= link_to 'Follow', create_follow_user_path(user.id), :style=>'color: green;' %>
		<% end %>
	<% end %>
</tr>